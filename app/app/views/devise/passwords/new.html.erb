<div class="title center">
  <h2>Forgot your password?</h2>
</div>
<div class="center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", :size => 50, :class => "is-primary" %>
  </div>
  <div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions" :class => "button btn-primary" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
</div>
